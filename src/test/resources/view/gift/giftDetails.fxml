                                <font>
                                    <Font size="14.0" />
                                </font>
                              <VBox.margin>
                                 <Insets left="5.0" right="5.0" top="5.0" />
                              </VBox.margin>
                            </Label>
                            <Label fx:id="creationDateLabel" alignment="TOP_CENTER" prefHeight="20.0" prefWidth="500.0" textAlignment="CENTER">
                                <font>
                                    <Font size="14.0" />
                                </font>
                                <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                </padding>
                            </Label>
                        </children>
                     </VBox>
                  </children>
                  <VBox.margin>
                     <Insets top="5.0" />
                  </VBox.margin>
               </HBox>
                <Label alignment="CENTER" contentDisplay="CENTER" layoutX="126.0" layoutY="320.0" prefHeight="20.0" prefWidth="870.0" text="Candies in gift" textAlignment="CENTER">
