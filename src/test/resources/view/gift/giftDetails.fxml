                        <Font size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                </Label>
               <VBox maxHeight="265.0" minHeight="265.0" prefHeight="265.0" prefWidth="100.0">
                  <children>
                      <TableView fx:id="candyTable" maxHeight="265.0" maxWidth="891.0" minHeight="265.0" prefHeight="265.0" prefWidth="879.0">
                          <columns>
                              <TableColumn fx:id="idColumn" prefWidth="30.0" text="Id" />
                              <TableColumn fx:id="nameColumn" prefWidth="100.0" text="Name" />
                              <TableColumn fx:id="trademarkColumn" prefWidth="100.0" text="Trademark" />
                              <TableColumn fx:id="typeColumn" prefWidth="90.0" text="Type" />
                              <TableColumn fx:id="weightColumn" prefWidth="75.0" text="Weight" />
