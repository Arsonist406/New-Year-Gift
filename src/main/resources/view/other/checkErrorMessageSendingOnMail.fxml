<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane stylesheets="/style/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="newYearGift.controller.other.CheckErrorMessageSendingOnMailController">
    <top>
        <fx:include source="../header.fxml" />
    </top>
   <center>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label maxWidth="533.0" prefHeight="126.0" prefWidth="533.0" text="If you want to change mail on which error messages will be sending, open in your file manager 'New-Year-Gift/src/main/resources/logback-spring.xml' and change properties values in '&lt;appender name='SMTP' class='ch.qos.logback.classic.net.SMTPAppender'&gt;'" wrapText="true">
               <font>
                  <Font size="16.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="sendTestErrorMessageButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#sendTestErrorMessage" text="Send test error message!" textAlignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Label fx:id="notificationLabel">
               <font>
                  <Font size="16.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
         </children></VBox>
   </center>

</BorderPane>
