                         <Insets top="10.0" />
                      </VBox.margin>
                   </Slider>

                   <Label layoutX="10.0" layoutY="259.0" text="Proteins">
                       <VBox.margin>
                           <Insets bottom="5.0" left="10.0" right="10.0" top="15.0" />
                       </VBox.margin>
                       <font>
                           <Font size="14.0" />
                       </font>
                   </Label>
                   <TextField fx:id="proteinsField" alignment="CENTER" maxWidth="100.0" text="0">
                       <font>
                           <Font size="14.0" />
                       </font>
                   </TextField>
                   <Slider fx:id="proteinsSlider" blockIncrement="1.0" layoutX="10.0" layoutY="308.0" majorTickUnit="10.0" minorTickCount="5" prefWidth="300.0" showTickLabels="true" showTickMarks="true">
                       <VBox.margin>
                           <Insets top="10.0" />
                       </VBox.margin>
                   </Slider>

                   <Label layoutX="10.0" layoutY="291.0" text="Carbohydrates">
                       <VBox.margin>
                           <Insets bottom="5.0" left="10.0" right="10.0" top="15.0" />
                       </VBox.margin>
                       <font>
                          <Font size="14.0" />
                       </font>
                   </Label>
                    <TextField fx:id="carbohydratesField" alignment="CENTER" maxWidth="100.0" text="0">
                       <font>
                          <Font size="14.0" />
                       </font>
                    </TextField>
                   <Slider fx:id="carbohydratesSlider" blockIncrement="1.0" layoutX="10.0" layoutY="308.0" majorTickUnit="10.0" minorTickCount="5" prefWidth="300.0" showTickLabels="true" showTickMarks="true">
                      <VBox.margin>
                         <Insets top="10.0" />
                      </VBox.margin>
                   </Slider>

                   <Button mnemonicParsing="false" onAction="#createCandy" text="Create!">
                      <VBox.margin>
                         <Insets bottom="10.0" left="30.0" right="30.0" top="30.0" />
                      </VBox.margin>
                      <font>
                         <Font size="16.0" />
                      </font>
                   </Button>

                   <Label fx:id="notificationLabel" alignment="CENTER" contentDisplay="CENTER" maxWidth="300.0" textAlignment="CENTER" textFill="RED" wrapText="true">
                      <VBox.margin>
                         <Insets bottom="10.0" top="5.0" />
                      </VBox.margin>
                  <font>
                     <Font size="14.0" />
                  </font>
                   </Label>
                   <Button mnemonicParsing="false" onAction="#clearDataFields" text="Clear all fields">
                      <VBox.margin>
                         <Insets />
                      </VBox.margin>
                   </Button>
               </children>
           </VBox>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
       </HBox>
   </center>
</BorderPane>
